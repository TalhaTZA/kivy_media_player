#: kivy 1.9.0

<LoadDialog>:
    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size
        FileChooserListView:
            id: _filechooser
            path: './'
        BoxLayout:
            size_hint: 1,.1
            orientation: 'horizontal'
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.load(_filechooser.path,_filechooser.selection)